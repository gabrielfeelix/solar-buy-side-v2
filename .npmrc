# NPM configuration for production deployments
# Otimizações para servidor HostGator

# Usar cache do npm
cache=~/.npm

# Não executar scripts pós-install (mais rápido)
ignore-scripts=false

# Usar versões exatas do package-lock.json
prefer-frozen-lockfile=true

# Não fazer audit durante install (mais rápido, audit já é feito no GitHub Actions)
audit=false

# Production mode
production=true

# Desabilitar optional dependencies em produção
optional=false

# Usar prefer-offline para instalar via cache quando possível
prefer-offline=true

# Aumentar timeout para servidores lentos
fetch-timeout=60000

# Limitar número de processos paralelos se servidor tiver poucos recursos
# max-workers=2
